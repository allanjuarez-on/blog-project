{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Obliga a definir el tipo de modulo que se esta utilizando.
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@schemas/*": ["src/schemas/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@custom-types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
    }
  },
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
