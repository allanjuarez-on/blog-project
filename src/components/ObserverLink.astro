---
const { ref = '/', type = 'external', class: className, ...props } = Astro.props
---

{
  type !== 'local' ? (
    <a
      href={ref}
      class:list={[
        'w-fit whitespace-nowrap no-underline underline-offset-2 decoration-solid decoration-2 decoration-gray-50 text-gray-50/50 cursor-default lg:hover:underline lg:hover:text-gray-50 lg:cursor-pointer',
        className,
      ]}
      target='_blank'
      rel='noopener noreferrer'
      {...props}>
      <slot />
    </a>
  ) : (
    <a
      href={ref}
      class:list={[
        'w-fit whitespace-nowrap no-underline underline-offset-2 decoration-solid decoration-2 decoration-gray-50/50 text-gray-50/50 cursor-default lg:hover:underline lg:hover:decoration-gray-50 lg:hover:text-gray-50 lg:cursor-pointer',
        className,
      ]}
      {...props}>
      <slot />
    </a>
  )
}
