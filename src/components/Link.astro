---
import type { PrimitiveLink } from '@custom-types/global'

interface Props extends Partial<PrimitiveLink> {}
const { ...props } = Astro.props
---

{
  props.type !== 'local' && props.ctx ? (
    <a href={props.href} target={props.ctx} rel={`noopener noreferrer`} {...props}>
      <slot />
    </a>
  ) : (
    <a href={props.href} {...props}>
      <slot />
    </a>
  )
}
